<div class="container row">
<% posts.forEach(function(post, index) {  %>
  <div class="col-sm-6 col-md-4 col-lg-3 col-xs-12">
    <div class="container-fluid row">
      <h2 id="user"><a href="/u/<%= post.user %>"><%= post.user %></a> èªª</h2>
      <p id="time"><small><%= post.time %></small></p>
      <p id="post"><%= post.post %></p>
      <% if (post.image) { %>
      <img src="/img/posts/<%= post.image %>"
        class="col-sm-12 col-xs-12 col-md-12 col-lg-12" id="image">
      <% } %>

      <a href="#" id="count"><%= post.like %> people like this.</a>
      <hr>
      <button class="btn like">
        <i class="material-icons">&#xE8DC;</i>
      </button>
    </div>
  </div>
<%}) %>
</div>
