<div class="container">
  <form method="post" action="/post" class="well form-horizontal"
    enctype='multipart/form-data'>
    <div class="form-group">
      <label for="post">Post</label>
      <textarea name="post" rows="6" class="form-control col-lg-9"></textarea>
    </div>
    <div class="form-group">
      <input name="image" type="file" value="choose file"
        class="form-control col-lg-3">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success">
        <i class="icon-comment icon-white"></i> 發言
      </button>
    </div>
  </form>
</div>
